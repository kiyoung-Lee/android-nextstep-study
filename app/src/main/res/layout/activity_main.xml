<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/click_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clcik!!"
        android:textSize="35dp"
        />

    <TextView
        android:id="@+id/handler_thread_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HandlerThread"
        app:layout_constraintTop_toTopOf="@id/center_text"
        />

    <TextView
        android:id="@+id/async_task_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AsyncTask"
        app:layout_constraintTop_toTopOf="@id/center_text"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/start_for_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start for result"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/async_task_text_view"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/service_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/handler_thread_activity_text_view"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/remove_service_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Bounded Service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_activity_text_view"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/sqlite_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sqlite"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_for_result_text_view"
        android:layout_marginTop="30dp"
        />

</android.support.constraint.ConstraintLayout>